{
  "manifest_version": 3,
  "name": "Night Owl – Protection des yeux",
  "description": "Mode sombre absolu • Daltoniens • Minuteur • Lecture nocturne • Stats",
  "version": "1.3",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Night Owl"
  },
  "permissions": [
    "storage",
    "activeTab",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": [],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["filters/colorblind-filters.svg"],
      "matches": ["<all_urls>"]
    }
  ]
}